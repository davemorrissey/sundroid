<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/locOptionMyLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_background"
                android:gravity="center_horizontal"
                android:padding="20dp"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="10dp"
                    android:src="?icn_loc_mylocation"/>
                <TextView
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="MY LOCATION"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/locOptionMap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_background"
                android:gravity="center_horizontal"
                android:padding="20dp"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="10dp"
                    android:src="?icn_loc_map"/>
                <TextView
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="MAP"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/locOptionSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_background"
                android:gravity="center_horizontal"
                android:padding="20dp"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="10dp"
                    android:src="?icn_loc_search"/>
                <TextView
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="SEARCH"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/locOptionSavedPlaces"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_background"
                android:gravity="center_horizontal"
                android:padding="20dp"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="10dp"
                    android:src="?icn_loc_savedplaces"/>
                <TextView
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="SAVED LOCATIONS"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>